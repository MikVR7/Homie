# Homie Backend Configuration
# Copy this file to .env and fill in your actual values

# Google Gemini AI API Key (Required for AI-powered file organization)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=5000

# Database Configuration
# SQLite database path (relative to backend directory)
DB_PATH=data/modules/homie_file_organizer.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/homie_backend.log
